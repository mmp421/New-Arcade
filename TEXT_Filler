            display.display();
          }

                //FOURTH STEP
                
                 else if (myStr == ("start, green, green, green, blue")) {
                  display.println("green path - green - green - blue");
                  display.display();
                }
                
                    //FIFTH STEP

                    else if (myStr == ("start, green, green, green, blue, blue")) {
                      display.println("green path - green - green - blue - blue");
                      display.println();
                    }     
                                    
                        //SIXTH STEP
    
                        else if (myStr == ("start, green, green, green, blue, blue, blue")) {
                          display.println("green path - green - green - blue - blue - blue");
                          display.println();
                        }     
                                                            
                        //SIXTH STEP
    
                        else if (myStr == ("start, green, green, green, blue, blue, green")) {
                          display.println("green path - green - green - blue - blue - green");
                          display.println();
                        }     
                               
                    //FIFTH STEP

                    else if (myStr == ("start, green, green, green, blue, green")) {
                      display.println("green path - green - green - blue - green");
                      display.println();
                    }
                                                   
                        //SIXTH STEP
    
                        else if (myStr == ("start, green, green, green, blue, green, blue")) {
                          display.println("green path - green - green - blue - green - blue");
                          display.println();
                        }
                                                                           
                        //SIXTH STEP
    
                        else if (myStr == ("start, green, green, green, blue, green, green")) {
                          display.println("green path - green - green - blue - green - green");
                          display.println();
                        }

                //FOURTH STEP
                else if (myStr == ("start, green, green, green, green")) {
                  display.println("green path - green - green - green");
                  display.display();
                }

                     //FIFTH STEP

                     else if (myStr == ("start, green, green, green, green, blue")) {
                      display.println("green path - green - green - green - blue");
                      display.println();
                     }
                     
                         //SIXTH STEP
    
                         else if (myStr == ("start, green, green, green, green, blue, blue")) {
                          display.println("green path - green - green - green - blue - blue");
                          display.println();
                         } 
                                             
                         //SIXTH STEP
    
                         else if (myStr == ("start, green, green, green, green, blue, green")) {
                          display.println("green path - green - green - green - blue - green");
                          display.println();
                         }

                     //FIFTH STEP

                     else if (myStr == ("start, green, green, green, green, green")) {
                      display.println("green path - green - green - green - green");
                      display.display();
                     }
                   
                         //SIXTH STEP
    
                         else if (myStr == ("start, green, green, green, green, green, blue")) {
                          display.println("green path - green - green - green - green - blue");
                          display.display();
                         }
                     
                         //SIXTH STEP
    
                         else if (myStr == ("start, green, green, green, green, green, green")) {
                          display.println("green path - green - green - green - green - green");
                          display.display();
                         }




 ///end of loop
}
